<h2>Mes réservations</h2>
<div class="d-flex flex-wrap">
  <% @mybookings.each do |booking| %>

      <div class="card-trip">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <div class="card-trip-infos ">
          <h2 class="card-trip-pricing">  <%= booking.pleureuse.price %>$</h2>
          <%= cl_image_tag booking.user.photo.key, alt: "alttext", class: "avatar-bordered card-trip-user" %>
          <div>
            <h2><%=booking.pleureuse.pseudo%></h2>
            <%=booking.start_date.strftime('%A %e %B, at %l:%M')%>
            <%=booking.end_date.strftime('%A %e %B, at %l:%M')%>

          </div>
        </div>
        <%= link_to "modifier réservation", edit_booking_path(booking), class: "btn-flat" %>
        <%= link_to "delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class:"btn-del" %>

      </div>
      <%end %>
  </div>
