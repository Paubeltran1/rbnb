
<div class="container pt-3">
  <div class="d-flex justify-content-center">
    <h2>Mes réservations</h2>
  </div>
  <div class="d-flex flex-wrap">
      <div class="cards">
    <% @mybookings.each do |booking| %>
        <div class="card-trip">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-trip-infos ">

            <%= cl_image_tag booking.pleureuse.user.photo.key, alt: "alttext", class: "avatar-bordered card-trip-user" %>

            <div class="d-flex justify-content-between p-3" style="width: 100%" >

              <div>
                <h2>
                  <%=booking.pleureuse.pseudo%>
                </h2>
                <div>
                  Du : <%=booking.start_date.strftime('%d-%m-%Y')%>
                </div>
                <div>
                  Au : <%=booking.end_date.strftime('%d-%m-%Y')%>
                </div>
              </div>

              <div>
                <h1>
                  <%= booking.pleureuse.price %>€
                </h1>
              </div>

            </div>

          </div>
          <div class="d-flex align-items-center justify-content-end">
          <div class="p-3">
          <%= link_to "Modifier", edit_booking_path(booking), class: "btn-flat" %>
          </div>
          <div class="p-3">
          <%= link_to "Supprimer", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-flat" %>
          </div>
          </div>
        </div>
      <%end %>
    </div>
  </div>
</div>
