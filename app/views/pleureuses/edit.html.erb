


<div class="container p-4">
  <div class="row justify-content-center">
    <div class ="col-sm-6 col-sm-offset-6">
      <div class="Box">
        <div class="shadow-sm p-3 mb-5 bg-white rounded">

      <h2 class="row justify-content-center">Modifiez votre profil de pleureuse</h2>

      <%= simple_form_for @pleureuse do |f| %>
        <div class="form-inputs">
          <%= f.input :pseudo%>
          <%= f.input :gender, collection: Pleureuse::GENDER, as: :radio_buttons %>
          <%= f.input :drama_option, collection: Pleureuse::DRAMA, as: :radio_buttons %>
          <%= f.input :price%>
          <%= f.input :city%>
          <%= f.input :description%>
          <%= f.input :language%>
          <%= f.input :address%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Edit pleureuse", class: "btn-flat" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
